#autostart
exec --no-startup-id "nm-applet"
exec --no-startup-id "blueman-applet"
exec --no-startup-id "Spideroak"

# resize window (you can also use the mouse for that)

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "workspace" {
    # switch to workspace
    bindsym a workspace 1; mode "default"  
    bindsym s workspace 2; mode "default"
    bindsym d workspace 3; mode "default"
    bindsym f workspace 4; mode "default"
    bindsym g workspace 5; mode "default"
    bindsym h workspace 6; mode "default"
    bindsym j workspace 7; mode "default"
    bindsym k workspace 8; mode "default"
    bindsym l workspace 9; mode "default"
    bindsym semicolon workspace 10; mode "default"

    # move focused container to workspace
    bindsym Shift+a move container to workspace 1; workspace 1; mode "default"
    bindsym Shift+s move container to workspace 2; workspace 2; mode "default"
    bindsym Shift+d move container to workspace 3; workspace 3; mode "default"
    bindsym Shift+f move container to workspace 4; workspace 4; mode "default"
    bindsym Shift+g move container to workspace 5; workspace 5; mode "default"
    bindsym Shift+h move container to workspace 6; workspace 6; mode "default"
    bindsym Shift+j move container to workspace 7; workspace 7; mode "default"
    bindsym Shift+k move container to workspace 8; workspace 8; mode "default"
    bindsym Shift+l move container to workspace 9; workspace 9; mode "default"
    bindsym Shift+semicolon; move container to workspace 10; workspace 10; mode "default"
    
    #allow to goto last workspace
    bindsym $mod+Tab workspace back_and_forth, mode "default"
    #abort the mode the same way you got in
    bindsym $mod+semicolon mode "default"
}
bindsym $mod+semicolon mode "workspace"

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# start dmenu (a program launcher)
bindsym $mod+p exec --no-startup-id dmenu_recent_aliases

# start a terminal
bindsym $mod+Return exec --no-startup-id xterm

# kill focused window
bindsym $mod+x kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal/vertical  orientation
bindsym Mod1+Shift+h split h
bindsym Mod1+Shift+j split v
bindsym Mod1+Shift+k split v
bindsym Mod1+Shift+l split h

# change container layout (stacked, tabbed, toggle split)
bindsym Mod1+p layout stacking
bindsym Mod1+semicolon layout tabbed
bindsym Mod1+l layout toggle split

# toggle fullscreen mode for the focused container
bindsym Mod1+f fullscreen toggle

# toggle tiling / floating
bindsym Mod1+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym Mod1+space focus mode_toggle

# focus the parent/child  container
bindsym Mod1+k focus parent
bindsym Mod1+j focus child

#allow to goto last workspace
bindsym $mod+Tab workspace back_and_forth

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#lock with xscreensaver
bindsym $mod+Ctrl+l exec --no-startup-id "xscreensaver-command -lock"

#take a screenshot
bindsym Print exec --no-startup-id "sleep .4; scrot -s ~/pics/screenshots/Screenshot_%d%b%Y-%T.png"

#jump to urgent
bindsym $mod+u [urgent=latest] focus

#volume controls
bindsym F9 exec --no-startup-id ponymix --max-volume=192 increase 6; exec killall -USR1 i3status
bindsym F8 exec --no-startup-id ponymix --max-volume=192 decrease 6; exec killall -USR1 i3status 
bindsym F7 exec --no-startup-id ponymix toggle; exec killall -USR1 i3status 
bindsym $mod+F9 exec pavucontrol
bindsym $mod+F8 exec pavucontrol
bindsym $mod+F7 exec pavucontrol

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill


