bindsym $m+Tab [con_mark=_last] focus

#
bindsym $a+l workspace next
bindsym $a+h workspace prev
bindsym $a+Shift+l move container to workspace next; workspace next
bindsym $a+Shift+h move container to workspace prev; workspace prev

# start dmenu (a program launcher)
bindsym $m+p exec --no-startup-id dmenu-recent-aliases

# start a terminal
bindsym $m+Return exec --no-startup-id xterm

# kill focused window
bindsym $m+x kill

# change focus
bindsym $m+h focus left
bindsym $m+j focus down
bindsym $m+k focus up
bindsym $m+l focus right

# move focused window
bindsym $m+Shift+h move left
bindsym $m+Shift+j move down
bindsym $m+Shift+k move up
bindsym $m+Shift+l move right

# split in horizontal/vertical  orientation
bindsym $m+Ctrl+h split h
bindsym $m+Ctrl+j split v
bindsym $m+Ctrl+semicolon layout toggle split

# change container layout (stacked, tabbed, toggle split)
bindsym $m+Ctrl+k layout stacking
bindsym $m+Ctrl+l layout tabbed

# toggle fullscreen mode for the focused container
bindsym $m+F11 fullscreen toggle
bindsym $m+Ctrl+F11 fullscreen toggle

# toggle tiling / floating
bindsym $m+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $m+space focus mode_toggle

# focus the parent/child  container
bindsym $m+Ctrl+o focus parent
bindsym $m+Ctrl+m focus child

# Use Mouse+$m to drag floating windows to their wanted position
floating_modifier $m

#lock with xscreensaver
bindsym $m+z exec --no-startup-id "xscreensaver-command -lock"

#take a screenshot
bindsym Print exec --no-startup-id "scrot_dmv"

#jump to urgent
bindsym $m+u [urgent=latest] focus

#volume controls
bindsym F9 exec --no-startup-id ponymix --max-volume=192 increase 6; exec killall -USR1 i3status
bindsym F8 exec --no-startup-id ponymix --max-volume=192 decrease 6; exec killall -USR1 i3status
bindsym F7 exec --no-startup-id ponymix toggle; exec killall -USR1 i3status
bindsym $m+F9 exec pavucontrol
bindsym $m+F8 exec pavucontrol
bindsym $m+F7 exec pavucontrol

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $m+button2 kill


